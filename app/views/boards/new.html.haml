.container
  = form_with(model:@board, url:boards_path, method:'post', local:true ) do |f|
    %div
      = f.label :title, 'タイトル'
    %div
      = f.text_field :title
    %div
      = f.label :content, '内容'
    %div
      = f.text_area :content
    .actions
      = f.submit '保存', class: 'btn-primary'